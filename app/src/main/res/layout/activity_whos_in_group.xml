<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorscheme1B"
    tools:context=".WhosInGroup">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="221dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/whoaddPeople"
        android:layout_alignRight="@+id/whoaddPeople"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_layout"
        android:gravity="center_vertical|center_horizontal"
        android:text="People In Group" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewWhosIn"
        android:layout_width="355dp"
        android:layout_height="429dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="0dp" />

    <EditText
        android:id="@+id/whoaddPeople"
        android:layout_width="230dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="83dp"
        android:background="@drawable/edit_text_layout"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Add People"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/whoaddperson"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/whoaddPeople"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/button_background"
        android:text="+" />

    <Button
        android:id="@+id/gobackdone"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="-11dp"
        android:background="@drawable/button_background"
        android:text="Done" />
</RelativeLayout>