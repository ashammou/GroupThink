<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorscheme1B"
    tools:context=".AddPeople">

    <Button
        android:id="@+id/doneButton"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:textColor="@color/colorscheme1C"
        android:textColorHint="@color/colorscheme1C"
        android:text="Done"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="158dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorscheme1C"
        android:textColorHint="@color/colorscheme1C"
        android:background="@drawable/edit_text_layout"
        android:gravity="center_vertical|center_horizontal"
        android:text="Add Group Members"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="167dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/edit_text_layout"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/colorscheme1C"
        android:textColorHint="@color/colorscheme1C"
        android:text="Group Name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="205dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:background="@drawable/edit_text_layout"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Add an individual..."
        android:textColor="@color/colorscheme1C"
        android:textColorHint="@color/colorscheme1C"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="34dp"
        android:layout_height="28dp"
        android:layout_alignBaseline="@id/editText2"
        android:layout_alignBottom="@+id/editText2"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="-209dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="13dp"
        android:layout_toRightOf="@+id/editText2"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textColor="@color/colorscheme1C"
        android:textColorHint="@color/colorscheme1C"
        android:shadowRadius="0"
        android:text="+" />


    <Button
        android:id="@+id/cancelButton"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:layout_below="@+id/doneButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:textColor="@color/colorscheme1C"
        android:textColorHint="@color/colorscheme1C"
        android:text="Cancel"
        android:textAllCaps="false" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerAddPeople"
        android:layout_width="370dp"
        android:layout_height="397dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp" />

</RelativeLayout>