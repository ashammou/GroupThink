<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWHITE"
    tools:context=".AddPeople">

    <Button
        android:id="@+id/doneButton"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Done"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="158dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Add Group Members" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:text="Group name displayed here" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Add an individual..."
        android:textSize="14sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="34dp"
        android:layout_height="28dp"
        android:layout_alignBaseline="@id/editText2"
        android:layout_alignBottom="@+id/editText2"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="-209dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="13dp"
        android:layout_toRightOf="@+id/editText2"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="+" />


    <Button
        android:id="@+id/cancelButton"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:layout_below="@+id/doneButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Cancel"
        android:textAllCaps="false" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerAddPeople"
        android:layout_width="370dp"
        android:layout_height="397dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="53dp"
        android:layout_height="29dp"
        android:layout_above="@+id/doneButton"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/glogo" />

</RelativeLayout>