<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroup">

    <EditText
        android:id="@+id/addPeopletoGroup"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Add People To Group..."
        android:inputType="textPersonName"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/addGroupName"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Type New Group Name..."
        android:inputType="textPersonName"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button2"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_alignTop="@+id/addPeopletoGroup"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/addPeopletoGroup"
        android:text="+"
        android:layout_toRightOf="@+id/addPeopletoGroup" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/addgRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/addGroupName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:layout_marginBottom="-101dp"
        android:text="Add group" />

</RelativeLayout>