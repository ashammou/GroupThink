<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWHITE"
    tools:context=".AddGroup">

    <EditText
        android:id="@+id/addPeopletoGroup"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Add People To Group..."

        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addGroupName"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Type New Group Name..."
        android:layout_alignTop="@+id/addPeopletoGroup"
        android:inputType="textPersonName"
        android:textAllCaps="false"

        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="34dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/addPeopletoGroup"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/addPeopletoGroup"
        android:layout_toRightOf="@+id/addPeopletoGroup"
        android:layout_alignBaseline="@+id/addPeopletoGroup"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="+" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/addgRV"
        android:layout_width="350dp"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="169dp" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="99dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/addPeopletoGroup"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="141dp"
        android:layout_marginRight="141dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Add group"
        android:textAllCaps="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="36dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/addPeopletoGroup"
        android:layout_toLeftOf="@+id/addPeopletoGroup"
        android:src="@drawable/GLogo" />

</RelativeLayout>