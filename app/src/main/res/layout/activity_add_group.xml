<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorscheme1B"
    tools:context=".AddGroup">

    <EditText
        android:id="@+id/addPeopletoGroup"
        android:layout_width="282dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:background="@drawable/edit_text_layout"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Add People To Group..."
        android:inputType="textPersonName"
        android:textColor="@color/colorscheme1C"

        android:textColorHint="@color/colorscheme1C"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/addGroupName"
        android:layout_width="284dp"
        android:layout_height="34dp"
        android:textColor="@color/colorscheme1C"
        android:textColorHint="@color/colorscheme1C"
        android:layout_alignTop="@+id/addPeopletoGroup"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/edit_text_layout"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Type New Group Name..."

        android:inputType="textPersonName"
        android:textAllCaps="false"

        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="34dp"
        android:layout_height="28dp"
        android:layout_alignBaseline="@+id/addPeopletoGroup"
        android:layout_alignTop="@+id/addPeopletoGroup"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/addPeopletoGroup"
        android:layout_toRightOf="@+id/addPeopletoGroup"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="+"
        android:textColor="@color/colorscheme1C"
        android:textColorHint="@color/colorscheme1C"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/addgRV"
        android:layout_width="348dp"
        android:layout_height="386dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="181dp" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="99dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/addPeopletoGroup"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="141dp"
        android:layout_marginRight="141dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Add group"
        android:textAllCaps="true"
        android:textColor="@color/colorscheme1C"
        android:textColorHint="@color/colorscheme1C"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>