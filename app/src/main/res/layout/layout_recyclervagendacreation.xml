<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayoutagendaC">

    <EditText
        android:id="@+id/editTextNewTime"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textViewAgendaNotes"
        android:layout_alignBaseline="@+id/textViewTitle"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textViewAgendaNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="TextView"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/textViewAgendaNotes"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>