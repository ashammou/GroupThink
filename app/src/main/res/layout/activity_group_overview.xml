<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorscheme1B"
    tools:context=".GroupOverview">

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/groupOverviewText"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/edit_text_layout"
        android:gravity="center_vertical|center_horizontal"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Group Overview"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/buttonAddGroup"
        android:layout_width="332dp"
        android:layout_height="29dp"
        android:layout_below="@id/divider3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Add Group"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerGroupOverview"
        android:layout_width="366dp"
        android:layout_height="391dp"
        android:layout_below="@id/buttonAddGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="39dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/buttonAddGroup"
        android:layout_alignTop="@+id/groupOverviewText"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-7dp"
        android:src="@drawable/glogo" />


</RelativeLayout>